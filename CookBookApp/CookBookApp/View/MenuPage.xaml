<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:CookBookApp.Resources"
             x:Class="CookBookApp.Views.MenuPage"
             BackgroundColor="AliceBlue">


    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="WidthRequest" Value ="200"/>

            <Setter Property="HeightRequest" Value ="50"/>

            <Setter Property="HorizontalOptions" Value="Center"/>
            
            <Setter Property="VerticalOptions" Value="Center"/>

            <Setter Property="TextColor" Value="Black"/>

            <Setter Property="Margin" Value="20"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="Black"/>
            
            <Setter Property="Margin" Value="5"/>

            <Setter Property="WidthRequest" Value ="200"/>
            
            <Setter Property="HeightRequest" Value ="50"/>
        </Style>

        <Style TargetType="Entry">
            <Setter Property="WidthRequest" Value ="200"/>

            <Setter Property="MinimumHeightRequest" Value ="50"/>

            <Setter Property="Margin" Value="5, 30, 5, 30"/>
        </Style>

        <Style TargetType="Picker">
            <Setter Property="WidthRequest" Value ="200"/>

            <Setter Property="MinimumHeightRequest" Value ="50"/>

            <Setter Property="Margin" Value="5, 30, 5, 30"/>
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Label  x:Name="lblMenuTitle" 
                    Text="{x:Static resources:AppResources.menu_lblMenu}"/>
            
            <Button x:Name="bttnRecipes"
                    Text="{x:Static resources:AppResources.menu_bttnRecipes}"    
                    Clicked="RecipeButton_Clicked"/>

            <StackLayout Orientation="Horizontal">
                <Entry x:Name="ntrUserNameEntry" Placeholder=""/>
                <Button x:Name="bttnUserNameUpdate" Text="UpdateUserName"
                        Command="{Binding SetUserNameCommand}"
                        CommandParameter="{Binding Text, Source={x:Reference ntrUserNameEntry}}"/>
            </StackLayout>
            
            <StackLayout Orientation="Horizontal">
                <Picker Title="langueages" 
                        ItemsSource="{Binding Languages, Mode=TwoWay}"
                        SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}"
                        ItemDisplayBinding="{Binding LanguageName}">
                </Picker>
                <Button x:Name="bttnLanguageUpdate" 
                        Text="UpdateLanguage"
                        Command="{Binding SetLanguageCommand}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>