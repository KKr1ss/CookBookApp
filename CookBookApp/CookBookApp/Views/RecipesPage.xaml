<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookBookApp.Views.RecipesPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="kutya"/>
            <ListView x:Name ="lstVwRecipes" 
                      ItemsSource="{Binding Path=Recipes}"
                      SelectedItem="{Binding Path=SelectedRecipe}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="kacsa"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label Text="cica"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>